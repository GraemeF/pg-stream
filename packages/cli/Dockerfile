# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build packages/cli`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t packages/cli`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system packages/cli && \
          adduser --system -G packages/cli packages/cli

COPY dist/packages/cli packages/cli
RUN chown -R packages/cli:packages/cli .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix packages/cli --omit=dev -f install

CMD [ "node", "packages/cli" ]
